<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#480606"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView24"
        android:layout_width="276dp"
        android:layout_height="47dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/berkshire_swash"
        android:text="Enter Your Details"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="@font/berkshire_swash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ed_sin"
        android:layout_width="276dp"
        android:layout_height="52dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView24">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_sintext"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#FFFFFF"
            android:hint="SIN Number"
            android:inputType="number"
            android:textColor="#370208"
            android:textColorHint="#370208" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ed_fname"
        android:layout_width="276dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_sin">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_fnametext"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#FFFFFF"
            android:hint="First Name"
            android:textColor="#370208"
            android:textColorHint="#370208" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ed_lname"
        android:layout_width="276dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:background="#480606"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_fname">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_lnametext"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#FFFFFF"
            android:hint="Last Name"
            android:textColor="#480606"
            android:textColorHint="#480606" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ed_dob"
        android:layout_width="276dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_lname">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_dobtext"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#FFFFFF"
            android:hint="Date Of Birth"
            android:textColor="#FFFFFF"
            android:textColorHint="#370208" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ed_dof"
        android:layout_width="276dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:background="#370208"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_gender">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_doftext"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#FFFFFF"
            android:hint="Date Of Filing "
            android:textColor="#360005"
            android:textColorHint="#370208" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ed_grossincome"
        android:layout_width="276dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_dof">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_grossincometext"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#EDE9E9"
            android:hint="Gross Income"
            android:textColor="#370208"
            android:textColorHint="#370208" />
    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/spinner_gender"
        android:layout_width="276dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:background="#F1E5E6"
        android:entries="@array/gender"
        android:textColor="#370208"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_dob" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ed_rrsp"
        android:layout_width="276dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_grossincome">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_rrsptext"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#FFFFFF"
            android:hint="RRSP Contribution"
            android:textColor="#370208"
            android:textColorHint="#370208" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#FFFFFF"
        android:shadowColor="#370208"
        android:text="Submit"
        android:textColor="#370208"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/ed_rrsp"
        app:layout_constraintTop_toBottomOf="@+id/ed_rrsp" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="#FFFFFF"
        android:shadowColor="#370208"
        android:text="Okay"
        android:textColor="#370208"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_rrsp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#FFFFFF"
        android:text="Clear"
        android:textColor="#360005"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/ed_rrsp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btn_submit"
        app:layout_constraintTop_toBottomOf="@+id/ed_rrsp" />

    <TextView
        android:id="@+id/textWarning"
        android:layout_width="267dp"
        android:layout_height="58dp"
        android:background="#FFFFFF"
        android:text="NOT ELIGIBLE TO FILE TRY NEXT YEAR"
        android:textColor="#AC0000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

</androidx.constraintlayout.widget.ConstraintLayout>
